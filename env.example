# WordPress Configuration
# Copy this file to .env.local and update the values

# WordPress API URL (default: localhost:8000)
WORDPRESS_API_URL=http://localhost:8000/wp-json/wp/v2
NEXT_PUBLIC_WORDPRESS_API_URL=http://localhost:8000/wp-json/wp/v2

# WordPress Site URL
WORDPRESS_SITE_URL=http://localhost:8000

# Optional: WordPress Authentication (if needed)
WORDPRESS_USERNAME=your_username
WORDPRESS_PASSWORD=your_application_password

# Optional: Custom endpoints
WORDPRESS_MENUS_URL=http://localhost:8000/wp-json/wp/v2/menus
WORDPRESS_ACF_URL=http://localhost:8000/wp-json/acf/v3 